@inject IHttpContextAccessor HttpContextAccessor
@{
    var username = HttpContextAccessor.HttpContext.Session.GetString("Username");
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Ganesh Festival</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body class="bg-fixed-layout">
    @{
        var path = Context.Request.Path.Value?.ToLower();
        var isPublicPage = path.Contains("resetpassword") || path.Contains("login") || path.Contains("register");
    }

    @if (Context.Session.GetString("Username") == null && !isPublicPage)
    {
        <script>window.location.href = '/Account/Login';</script>
    }


    <div class="d-md-none bg-dark text-white d-flex justify-content-between align-items-center px-3 py-2">
        <button class="btn btn-sm btn-light" onclick="toggleSidebar()">☰</button>
        <span>@ViewData["Title"]</span>
        <a asp-controller="Auth" asp-action="Logout" class="text-white text-decoration-none">Logout</a>
    </div>

    <div class="scroll-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-2 sidebar border-end p-4" id="sidebar">
                    <h5>Ganesh Festival Dashboard</h5>
                    <p>Hello, @username</p>
                    <ul class="nav flex-column">
                        <li><a asp-action="Index" asp-controller="Home" class="btn mycustombtn w-100 mb-2">🏠 Dashboard</a></li>
                        <li><a asp-action="Images" asp-controller="Home" class="btn mycustombtn w-100 mb-2">🖼️ Images</a></li>
                        <li><a asp-action="About" asp-controller="Home" class="btn mycustombtn w-100 mb-2">ℹ About</a></li>
                        <li><a asp-action="ContactUs" asp-controller="Home" class="btn mycustombtn w-100 mb-2">✉ Contact</a></li>
                        <li><a asp-action="Privacy" asp-controller="Home" class="btn mycustombtn w-100 mb-2">🔐Privacy</a></li>
                        <li><a asp-action="Logout" asp-controller="Auth" class="btn mycustombtn w-100 mb-2">← Logout</a></li>

                        <li>
                            <div class="watermark-footer">
                                <b>Made By - Pratham Shetty</b>
                            </div>
                        </li>
                    </ul>
                    
                </div>

                <!-- Main -->
                <div class="col-md-10 p-4">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <script>
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('show');
        }
    </script>

    @RenderSection("Scripts", required: false)

</body>
</html> 