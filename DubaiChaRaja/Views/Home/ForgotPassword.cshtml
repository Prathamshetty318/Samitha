﻿@{
Layout = null;
}

<!Doctype>
<html>
<head>
    <title>Forgot Password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body class="bg-light">

    <div class="container mt-5 col-md-4">
        <div class="card-body">
            <h5 class="card-title mb-3">Forgot Password</h5>

            <form id="forgotForm">
                <div class="mb-3">
                    <input type="email" id="forgotEmail" name="email" class="form-control" placeholder="Email" required />
                </div>

                <div class="mb-2 d-flex">
                    <input type="text" id="forgotCode" class="form-control me-2" placeholder="Enter Code" />
                    <button type="button" class="btn btn-outline-primary" id="forgotSendBtn">Send Code</button>
                </div>

                <div id="forgotMsg" class="text-muted small mb-2"></div>

                <div class="mb-3">
                    <input type="password" name="newPassword" class="form-control" placeholder="New Password" required />
                </div>
                <div class="modal-footer">
                    <a href="@Url.Action("Welcome", "Home")" class="btn btn-outline-secondary me-2">Back</a>
                    <button type="submit" class="btn btn-success">Reset Password</button>

                </div>

            </form>

        </div>
    </div>

    <script src="~/js/auth.js"></script>

</body>


</html>
