﻿@{
Layout = "~/Views/Shared/_Layout.cshtml";
ViewData["Title"] = "Dashboard";
}

@if (Context.Session.GetString("Username") == null)
{
    <script>window.location.href = '/Account/Login';</script>
}

<!DOCTYPE html>
<html>
    <head>
    <div class="d-flex justify-content-between align-items-center mb-3 mt-0">
        <h4>Your Records</h4>
    </div>
    </head>
    <body>




<div class="row g-4">
    <div class="col-lg-9">
        <div class="row g-3">
            <div class="col-md-4">
                <div class="card text-white bg-success">
                    <div class="card-body">
                        <h5>Total Donation</h5>
                        <p class="h4" id="totalIncome">₹0</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-danger">
                    <div class="card-body">
                        <h5>Total Expense</h5>
                        <p class="h4" id="totalExpense">₹0</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-primary">
                    <div class="card-body">
                        <h5>Net Balance</h5>
                        <p class="h4" id="netBalance">₹0</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pie Chart for Mobile -->
        <div class="d-block d-lg-none mt-4">
            <div class="bg-transparent p-3 rounded" style="width: 100%; max-width: 350px; margin: auto;">
                <canvas id="pieChartMobile" height="300"></canvas>
            </div>
        </div>


        <div class="row g-3 mt-2 align-items-end">
            <div class="col-md-3">
                <label class="form-label">Filter By Year</label>
                <select id="yearFilter" class="form-select"></select>
            </div>
            <div class="col-md-5">
                <label class="form-label">Search Records</label>
                <input class="form-control" placeholder="Search Records" name="search" id="searchInput" />
            </div>
        </div>
        <!-- Pie Chart for Mobile -->
        <!-- Pie Chart for Desktop -->
        <div class="position-absolute top-0 end-0 p-3 d-none d-lg-block mt-lg-4" style="z-index: 10;">
            <div class="bg-transparent p-3 rounded " style="width: 300px;">
                <canvas id="pieChart" height="300"></canvas>
            </div>
        </div>



        <form id="recordForm" class="row g-3 mt-3">
            <div class="col-md-4">
                <label class="form-label">Description</label>
                <input class="form-control" placeholder="Description" name="desc" required />
            </div>
            <div class="col-md-3">
                <label class="form-label">Amount</label>
                <input class="form-control" placeholder="Amount" name="amt" type="number" required />
            </div>
            <div class="col-md-3">
                <label class="form-label">Type</label>
                <select class="form-select" name="type" required>
                    <option>Donation</option>
                    <option>Expense</option>
                </select>
            </div>
            <div class="col-12">
                <button class="btn btn-primary col-md-3" type="submit">Add Record</button>
            </div>
            <input class="form-control" name="year" type="hidden" id="hiddenYear" />
        </form>
        <br />
        <br />
        <div>
            <h5 class="Yell">Records</h5>
        </div>



        <div class="table-responsive mt-4">
            <table class="table table-bordered table-hover bg-white rounded shadow-sm" id="recordsTable">
                <thead class="table-light">

                    <tr>
                        <th style="min-width: 100px;">Description</th>
                        <th style="min-width: 100px;">Amount</th>
                        <th style="min-width: 120px;">Type</th>
                        <th style="min-width: 80px;">Year</th>
                        <th style="min-width: 100px;">Action</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <div class="modal fade" id="descModal" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Full Description</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body" id="descContent"></div>
                </div>
            </div>
        </div>

    </div>


</div>

<script src="~/js/Home.js"></script>
    <script>
        var hasaccess = @(Context.Session.GetInt32("hasaccess") ?? 0);
        if (!hasaccess) {
            document.querySelectorAll(".delete-btn").forEach(btn => btn.style.display = "none");
            document.getElementById("add-form").style.display = "none";
        }
    </script>

</body>
</html>